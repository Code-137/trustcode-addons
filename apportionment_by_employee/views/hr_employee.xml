<odoo>
    <record id="employee_apportionment_form" model="ir.ui.view">
        <field name="name">employee.apportionment.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="apportionment" string="Controle de Rateio">
                    <group>
                        <group>
                            <field name="analytic_account_ids" widget="many2many_tags" />
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>