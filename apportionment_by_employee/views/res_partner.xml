<odoo>
    <record id="partner_apportionment_form" model="ir.ui.view">
        <field name="name">partner.apportionment.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.partner_view_button_contracts_count"/>
        <field name="arch" type="xml">
            <field name="user_id" position="after">
                <field name="is_branch" string="Ã‰ Filial"/>
            </field>
            <button name="%(account.action_open_partner_analytic_accounts)d" position="after">
                <button class="oe_stat_button" type="object" name="action_view_analytic_apportionment_lines"
                    icon="fa-book" groups="analytic.group_analytic_accounting">
                    <field string="Linhas de Rateio" name="count_apportionment_lines" widget="statinfo"/>
                </button>
            </button>
            <notebook position="inside">
                <page name="apportionment" string="Controle de Rateio" attrs="{'invisible': [('is_branch', '=', False)]}">
                    <group>
                        <group>
                            <field name="acc_group_ids" widget="many2many_tags" />
                            <field name="has_analytic_acc" widget="many2many_tags" invisible="1" />
                            <button name="create_analytic_account"
                                    string="Criar centro de custo"
                                    type="object"
                                    class="oe_inline fa fa-arrow-right oe_link"
                                    attrs="{'invisible': [('has_analytic_acc', '=', True)]}" />
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>
