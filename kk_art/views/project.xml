<odoo>

    <record id="view_project_art_filter" model="ir.ui.view">
        <field name="name">ART Filter</field>
        <field name="model">project.project</field>
        <field name="priority" eval="20"/>
        <field name="arch" type="xml">
            <search string="Search ART">
                <field name="name" string="Nome do Projeto"/>
                <field name="partner_id"/>
                <field name="kk_site_code"/>
                <field name="id_site_code"/>
                <field name="date_delivered"/>
                <field name="art"/>
                <group expand="0" string="Agrupar por...">
                    <filter name="group_partner" string="Parceiro" domain="[]" context="{'group_by':'partner_id'}"/>
                    <filter name="group_kk_site_code" string="ID Site" domain="[]" context="{'group_by':'kk_site_code'}"/>
                    <filter name="group_id_site_code" string="ID Site" domain="[]" context="{'group_by':'id_site_code'}"/>
                    <filter name="group_date_delivery" string="Data Entrega" domain="[]" context="{'group_by':'date_delivered'}"/>
                    <filter name="group_art" string="ART" domain="[]" context="{'group_by':'art'}"/>
               </group>
           </search>
        </field>
    </record>

    <record id="view_project_art_list" model="ir.ui.view">
        <field name="name">project.project.art.list</field>
        <field name="model">project.project</field>
        <field name="priority">150</field>
        <field name="arch" type="xml">
            <tree string="ART" editable="bottom" create="false">
                <field name="name" readonly="1" string="Nome do Projeto"/>
                <field name="project_self_id" readonly="1"/>
                <field name="partner_id" readonly="1"/>
                <field name="kk_site_code" readonly="1"/>
                <field name="id_site_code" readonly="1"/>
                <field name="date_delivered" readonly="1" string="Data Entrega"/>
                <field name="art"/>
            </tree>
        </field>
    </record>

    <record id="project_art_action" model="ir.actions.act_window">
        <field name="name">ART</field>
        <field name="res_model">project.project</field>
        <field name="search_view_id" ref="view_project_art_filter"/>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_project_art_list"/>
        <field name="help" type="html">
            <p>
                No momento não há nenhum Projeto cadastrado.
            </p>
        </field>
    </record>

    <menuitem id="project_art_menu"
              name="ART"
              parent="project.menu_project_management"
              action="project_art_action"
              sequence="24"/>
</odoo>