<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="message_invoice_created">
            <p>Caro <t t-esc="object.user_id.sudo().name"/>,</p>
            <p>O Pedido de Vendas <t t-esc="object.origin" /> do cliente <t t-esc="object.partner_id.name_get()[0][1]" /> foi faturado.</p>
            <p>
                <a t-att-href="'/mail/view?model=%s&amp;res_id=%s' % (object._name, object.id)"
                        style="background-color: #9E588B; margin-top: 10px; padding: 10px; text-decoration: none; color: #fff; border-radius: 5px; font-size: 16px;">
                    Visualizar a Fatura
                </a>
            </p>
            <p style="color:#9E588B;">Powered by <a target="_blank" href="https://www.trustcode.com.br">Odoo</a>.</p>
        </template>

    </data>
</odoo>