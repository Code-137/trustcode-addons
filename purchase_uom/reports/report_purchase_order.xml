<?xml version="1.0"?>
<odoo>
    <template id="second_uom_purchase_order" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//table/tbody" position="replace">
            <tr t-foreach="o.order_line" t-as="line">
                <td>
                    <span t-field="line.name"/>
                </td>
                <td>
                    <span t-esc="', '.join(map(lambda x: x.name, line.taxes_id))"/>
                </td>
                <td class="text-center">
                    <span t-field="line.date_planned"/>
                </td>
                <td class="text-right">
                    <t t-if="line.second_uom">
                        <span t-field="line.second_qty"/>
                        <span t-field="line.second_uom.name" groups="product.group_uom"/>
                    </t>
                    <t t-if="not line.second_uom">
                        <span t-field="line.product_qty"/>
                        <span t-field="line.product_uom.name" groups="product.group_uom"/>
                    </t>
                </td>
                <td class="text-right">
                    <t t-if="line.second_price_unit">
                        <span t-field="line.second_price_unit" />
                    </t>
                    <t t-if="not line.second_price_unit">
                        <span t-field="line.price_unit"/>
                    </t>
                </td>
                <td class="text-right">
                    <span t-field="line.price_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                </td>
            </tr>
        </xpath>
    </template>
    <template id="second_uom_purchase_quotation" inherit_id="purchase.report_purchasequotation_document">
        <xpath expr="//table/tbody" position="replace">
            <tr t-foreach="o.order_line" t-as="order_line">
                <td>
                    <span t-field="order_line.name"/>
                </td>
                <td class="text-center">
                    <span t-field="order_line.date_planned"/>
                </td>
                <td class="text-right">
                    <t t-if="order_line.second_uom">
                        <span t-field="order_line.second_qty"/>
                        <span t-field="order_line.second_uom.name" groups="product.group_uom"/>
                    </t>
                    <t t-if="not order_line.second_uom">
                        <span t-field="order_line.product_qty"/>
                        <span t-field="order_line.product_uom.name" groups="product.group_uom"/>
                    </t>
                </td>
            </tr>
        </xpath>
    </template>
</odoo>