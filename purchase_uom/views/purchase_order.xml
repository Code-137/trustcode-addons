<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_purchase_uom" model="ir.ui.view">
        <field name="name">purchase.order.purchase.uom</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_uom']" position="after">
                <field name="second_qty" invisible="1" />
                <field name="second_price_unit" invisible="1" />
                <field name="second_uom" invisible="1" />
            </xpath>
            <xpath expr="//field[@name='order_line']/form//field[@name='date_planned']" position="after">
                <label for="second_qty"/>
                <div attrs="{'invisible': [('second_uom', '=', False)]}">
                    <field name="second_qty" class="oe_inline" readonly="1" />
                    <span class="oe_inline">&#160;</span>
                    <field name="second_uom" groups="product.group_uom" class="oe_inline" readonly="1" />
                </div>
                <field name="second_price_unit" readonly="1" />
            </xpath>
        </field>
    </record>
</odoo>
