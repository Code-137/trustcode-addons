<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_supplierinfo_purchase_uom" model="ir.ui.view">
        <field name="name">product.supplierinfo.purchase.uom</field>
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group/group[2]" position="after">
                <group></group>
                <group>
                    <field name="purchase_uom_id" groups="product.group_uom"/>
                    <field name="new_price_unit" groups="product.group_uom"/>
                    <field name="conversion_rate" groups="product.group_uom"/>
                    <p class="oe_grey" colspan="2" groups="product.group_uom">                    Ex: Fator de Conversão * Unidade de Medida de Compra = 2ª Unidade de Compra                </p>
                </group>
            </xpath>
        </field>
    </record>
</odoo>